<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0faf8"
    tools:context=".Patient">

    <EditText
        android:id="@+id/addressSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Διεύθυνση"
        android:textColor="#6B8993"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordSignUp"
        app:layout_constraintStart_toStartOf="@+id/passwordSignUp"
        tools:layout_editor_absoluteY="299dp" />

    <EditText
        android:id="@+id/amkaSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ΑΜΚΑ"
        android:textColor="#6B8993"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/okButton"
        app:layout_constraintStart_toStartOf="@+id/okButton"
        tools:layout_editor_absoluteY="496dp" />

    <TextView
        android:id="@+id/titleSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Δημιουργία Ασθενή"
        android:textAlignment="center"
        android:textColor="#00C7AA"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/nameSignUp"
        app:layout_constraintStart_toStartOf="@+id/nameSignUp"
        tools:layout_editor_absoluteY="80dp" />

    <EditText
        android:id="@+id/nameSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Όνομα"
        android:textColor="#6B8993"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/addressSignUp"
        app:layout_constraintStart_toStartOf="@+id/addressSignUp"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/passwordSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Κωδικός"
        android:textColor="#6B8993"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/amkaSignUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/amkaSignUp"
        tools:layout_editor_absoluteY="407dp" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00AFEB"
        android:backgroundTintMode="add"
        android:text="OK"
        android:textColor="#e0faf8"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="626dp" />
</androidx.constraintlayout.widget.ConstraintLayout>