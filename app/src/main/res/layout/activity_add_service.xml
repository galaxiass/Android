<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0faf7"
    android:orientation="vertical">

    <!-- Header Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Νέα παροχή"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="0dp"
        android:textColor="#1e74fd"/>

    <!-- Underline -->
    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="#6B8993"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-4dp"
        android:layout_marginStart="0dp"/>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0faf7"
        android:paddingTop="0dp"
        android:padding="16dp">



        <EditText
            android:id="@+id/editTextServiceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerClinic"
            android:hint="Κωδικός"
            android:minHeight="48dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/editTextServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextServiceId"
            android:layout_marginTop="5dp"
            android:hint="Όνομα"
            android:minHeight="48dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/editTextServiceCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextServiceName"
            android:layout_marginTop="5dp"
            android:hint="Κόστος"
            android:minHeight="48dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/editTextServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextServiceCost"
            android:layout_marginTop="5dp"
            android:hint="Περιγραφή"
            android:minHeight="90dp"
            android:background="@drawable/edittext_background"
            android:gravity="top"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Φυσιοθεραπευτήριο:"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_marginTop="-8dp"
            android:layout_marginStart="16dp"
            android:textColor="#1e74fd" />

        <Spinner
            android:id="@+id/spinnerClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewClinic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/spinner_description"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />


        <Button
            android:id="@+id/buttonAddService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextServiceDescription"
            android:layout_marginTop="16dp"
            android:text="OK"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:textStyle=""
            android:textSize="20sp"
            android:layout_centerHorizontal="true" />




    </RelativeLayout>

</LinearLayout>
